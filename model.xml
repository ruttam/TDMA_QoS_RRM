// --------------------------------------------------------------------------------------------
// QUEUE
// --------------------------------------------------------------------------------------------

UEid_t queue[10];

int front = -1;
int rear = -1;
int size = -1;

int isEmpty()
{
    return size &lt; 0;
}

int isFull()
{
    return size == number_UE;
}

void enqueue(int value)
{
    if(size &lt; number_UE)
    {
        if(isEmpty())
        {
            queue[0] = value;
            front = rear = 0;
            size = 1;
        }
        else if(rear == number_UE - 1)
        {
            queue[0] = value;
            rear = 0;
            size++;
        }
        else
        {
            queue[rear + 1] = value;
            rear++;
            size++;
        }
    }
    else
    {
        // Queue is full
    }
}

int pop()
{
    return queue[front];
}

int dequeue()
{
    if(isEmpty())
    {
        // Queue is empty
        return -1;
    }
    else
    {
        int value = pop();
        size--;
        front++;
        return value;
    }
}







